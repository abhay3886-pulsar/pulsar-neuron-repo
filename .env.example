PULSAR_ENV=dev
PULSAR_TIMEZONE=Asia/Kolkata
PULSAR_SECRETS_PROVIDER=env   # env | aws | gcp

# App secrets (used if PROVIDER=env)
DB_DSN=postgresql://user:pass@host:5432/pulsar
TELEGRAM_BOT_TOKEN=000000:xxxx
TELEGRAM_CHAT_ID=123456
KITE_API_KEY=your_key
KITE_API_SECRET=your_secret
KITE_ACCESS_TOKEN=your_token

# AWS (used if PROVIDER=aws)
AWS_REGION=ap-south-1
AWS_SECRETSMGR_SECRET_NAME=pulsar/neuron/app   # JSON secret
AWS_SSM_PARAM_PREFIX=/pulsar/neuron/           # fallback path (optional)

# GCP (used if PROVIDER=gcp)
GCP_PROJECT_ID=your-project
GCP_SECRET_NAME=pulsar-neuron-app
